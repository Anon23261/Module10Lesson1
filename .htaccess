# Disable browser features we don't use
Header always set Permissions-Policy "interest-cohort=(),attribution-reporting=(),run-ad-auction=(),join-ad-interest-group=(),compute-pressure=(),browsing-topics=()"

# Security headers
Header always set X-Frame-Options "SAMEORIGIN"
Header always set X-Content-Type-Options "nosniff"
Header always set Referrer-Policy "strict-origin-when-cross-origin"

# Content Security Policy
Header always set Content-Security-Policy "default-src 'self' https:; script-src 'self' https: 'unsafe-inline' 'unsafe-eval'; style-src 'self' https: 'unsafe-inline';"
